<%- layout("/layouts/boilerplate.ejs")  %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form method="POST" action="/signup" class="needs-validation mb-3" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input id="username" class="form-control" type="text" name="username", placeholder="Enter username" required>
                <div class="invalid-feedback">
                    Please Enter username.
                  </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input id="email" class="form-control" type="email" name="email", placeholder="Enter a email" required>
                <div class="invalid-feedback">
                    Please Enter email.
                  </div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input id="password" class="form-control" type="password" name="password", placeholder="Enter password" required>
                <div class="invalid-feedback">
                    Please Enter password.
                  </div>
            </div>

            <button class="btn btn-dark">SignUp</button>
        </form>
    </div>
</div>